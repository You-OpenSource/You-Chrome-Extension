{
  "name": "You.com | Search, chat, and create with AI",
  "manifest_version": 3,
  "version": "1.0.0",
  "description": "Experience the future of search with generative AI",
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["./static/js/content.js"]
    }
  ],
  "permissions": ["declarativeNetRequestWithHostAccess", "storage"],
  "host_permissions": ["*://*/*"],
  "background": {
    "service_worker": "background.js"
  },

  "icons": {
    "16": "icons/favicon-16x16.png",
    "32": "icons/favicon-32x32.png",
    "96": "icons/favicon-96x96.png",
    "128": "icons/favicon-128x128.png",
    "196": "icons/favicon-196x196.png"
  },

  "chrome_settings_overrides": {
    "search_provider": {
      "name": "you.com",
      "keyword": "you.com",
      "search_url": "https://you.com/search?q={searchTerms}?chatMode=default&tbm=youchat&fromExtension=true",
      "suggest_url": "https://you.com/api/ac?q={searchTerms}",
      "favicon_url": "https://you.com/favicon/favicon.ico",
      "encoding": "UTF-8",
      "is_default": true
    }
  },

  "externally_connectable": {
    "matches": ["*://localhost/*", "*://you.com/*", "*://*.you.com/*"]
  }
}
